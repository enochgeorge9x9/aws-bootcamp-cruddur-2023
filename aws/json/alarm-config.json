{
	"AlarmName": "DailyEstimatedCharges",
	"AlarmDescription": "This alarm would trigger if the daily estimated charges exceed 1USD",
	"ActionsEnabled": true,
	"AlarmActions": [
        //Run bash: aws sns create-topic --name billing-alarm 
        "arn:aws:<TOPIC ARN>"],
	"EvaluationPeriods": 1,
	"DatapointsToAlarm": 1,
	"Threshold": 1,
	"ComparisonOperator": "GreaterThanOrEqualToThreshold",
	"TreatMissingData": "breaching",
	"Metrics": [
		{
			"Id": "m1",
			"MetricStat": {
				"Metric": {
					"Namespace": "AWS/Billing",
					"MetricName": "EstimatedCharges",
					"Dimensions": [
						{
							"Name": "Currency",
							"Value": "USD"
						}
					]
				},
				"Period": 86400,
				"Stat": "Maximum"
			},
			"ReturnData": false
		},
		{
			"Id": "e1",
			"Expression": "IF(RATE(m1)>0,RATE(m1)*86400,0)",
			"Label": "DailyEstimatedCharges",
			"ReturnData": true
		}
	]
}
